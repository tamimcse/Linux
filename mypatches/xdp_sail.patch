+static int sail_fib_lookup(struct net *net, struct bpf_fib_lookup *params,
+			   u32 flags, bool check_mtu)
+{
+	struct net_device *dev_in, *dev_out;
+	struct fib_table *tb;
+	struct neighbour *neigh;
+	u32 tbid;
+	int err;
+	u32 mtu;
+
