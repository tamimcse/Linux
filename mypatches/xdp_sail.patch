+		tbid = l3mdev_fib_table_rcu(dev_in) ? : RT_TABLE_MAIN;
+	} else {
+		tbid = RT_TABLE_MAIN;
+	}
+
+	tb = fib_get_table(net, tbid);
+	if (unlikely(!tb))
+		return BPF_FIB_LKUP_RET_NOT_FWDED;
+
+	err = sail_lookup(&tb->sail, params->ipv4_dst, &dev_out);
