+	u32 __rcu *C24;
+	u32 cnk24_count;/*Number of chunks in level 24*/
+
+	/*Level 32*/
+	u8 __rcu *N32;
+	u8 __rcu *P32;
+	u32 cnk32_count;/*Number of chunks in level 32*/
+
+	/*Index to this array is stored in N16, N24 and N32*/
+	struct net_device	*netdevs[NETDEV_COUNT_MAX];
